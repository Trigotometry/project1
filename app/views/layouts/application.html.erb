<!DOCTYPE html>
<html>
	<head>
		<title>Project1</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= cloudinary_js_config %>

		<!-- Bootstrap -->
		<meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
		<%= stylesheet_link_tag 'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
	</head>

	<body>
		<nav class='navbar sticky-top navbar-expand-lg navbar-dark md'>
			<div class="container">
				<a class='navbar-brand' href='/'><strong>The Basicest Forum</strong></a>
				<button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
					<span class='navbar-toggler-icon'></span>
				</button>

				<div class='collapse navbar-collapse' id='navbarSupportedContent'>
					<ul class='navbar-nav mr-auto'>
						<li class='nav-item'>
							<%= link_to 'Topics', topics_path, :class => 'nav-link' %>
						</li>
						<% if @current_user.present? %>
							<% if @current_user.admin? %>
								<%= link_to 'New Topic', new_topic_path, :class => 'nav-link' %>
							<% end %>
						<% end %>
					</ul>
					<ul class="navbar-nav">
						<% if @current_user.present? %>
							<% if @current_user.admin? %>
								<li class='nav-item'>
									<%= link_to 'All Users', users_path, :class => 'nav-link' %>
								</li>
							<% end %>
							<li class='nav-item'>
								<%= link_to "Sign out, #{ @current_user.email }", login_path, :method => 'delete', :class => 'nav-link' %>
							</li>
						<% end %>
					</ul>
					<% unless @current_user.present? %>
						<ul class="navbar-nav">
							<li class='nav-item'>
								<%= link_to 'Sign Up', new_user_path, :class => 'nav-link' %>
							</li>
							<li class='nav-item'>
								<%= link_to 'Sign In', login_path, :class => 'nav-link' %>
							</li>
						</ul>
					<% end %>
				</div>
			</div>
		</nav>

		<div class='container mds p-5 mt-5 rounded'>
			<%= yield %>
		</div>
	</body>
</html>
