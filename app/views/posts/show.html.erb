<div class="post-heading">
	<h2><%= @initial_post.post_title %></h2>
</div>

<p><strong><%= @initial_post.user.email %></strong> gets the ball rolling with;</p>
<%= @initial_post.initial_content %>

<div class="post-controls">
	<% if @current_user.present? %>
		<% if @current_user.id == @initial_post.user.id %>
			<%= link_to "Edit Your Post", edit_topic_post_path( params[:topic_id], @initial_post.id ) %>
		<% end %>
	<% end %>
</div>

<% @responses.each do |response| %>
	<div class="response">
		<p><strong><%= response.user.email %></strong> replies;</p>
		<p><%= response.content %></p>

		<% if @current_user.present? %>
			<% if @current_user.id == response.user_id %>
				<div class="post-controls">
					<p><a href="#" class="toggle-edit">Edit Response</a></p>
					<%= link_to "Delete Response", response_path( response.id ), :method => 'delete' %>
				</div>
			<% end %>
		<% end %>

		<%= form_for response do |f| %>
			<%= f.text_area :content %>
			<%= f.submit %>
		<% end %>
	</div>
<% end %>

<% if @current_user.present? %>
	<div class="create-response">
		<p><a href="#" class="toggle-create">Create Response</a></p>
		<%= form_for Response.new do |f| %>
		<%= hidden_field_tag :post_id, params[:id] %>
			<%= f.text_area :content %>
			<%= f.submit %>
		<% end %>
	</div>
<% end %>
